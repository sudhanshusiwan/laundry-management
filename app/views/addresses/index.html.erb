<h3>Your Addresses</h3>

<table border="1">
  <th colspan="3">
    Your List Of Addresses
  </th>
  <tr>
    <td>Area</td>
    <td>Text</td>
    <td>Use this Address to Make New Order</td>
  </tr>
  <% if @addresses.blank? %>
      <tr>
        <td colspan="3">There is Nothig to display</td>
      </tr>
  <% else %>
      <% @addresses.each do |address| %>
          <tr>
            <td><%= address.area.name %></td>
            <td><%= address.line1 + ' ' + address.line2 + ', ' + address.area.name + ', ' + address.city + '-' + address.pin.to_s %></td>
            <td><%= link_to "Use this Address to Make New Order", new_order_path(:address_id => address.id) %></td>
          </tr>
      <% end %>
  <% end %>
</table>

<%= link_to "Add New Address", new_user_address_path(current_user) %>